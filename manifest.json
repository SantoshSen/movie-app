{
  "manifest_version": 2,
  "name"            : "Moviepedia",
  "description"     : "This extension is tailored towards ensuring that you relax and entertain yourself by scheduling movies for view and get reminded once it's time to relax",
  "short_name"      : "moviepedia",
  "version"         : "1.0",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon" : "img/logo.png"
  },
  "background": {
    "scripts": ["js/notifications.js"],
    "persistent": false
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
